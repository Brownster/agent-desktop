{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "isolatedModules": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/__tests__/**/*.js"
  ]
}